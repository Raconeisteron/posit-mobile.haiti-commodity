<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:key="@string/commodityPrefs"
		android:title="@string/commodityPrefs">

		<PreferenceScreen android:title="@string/commodityPrefs">
		
		
		<EditTextPreference 
				android:key="@string/cSmsPhoneKey"  
				android:title="@string/cSMS_phone"
				android:summary = "@string/cSMS_phone" 
				android:phoneNumber="true"
				android:shouldDisableView="true"
				android:defaultValue = "@string/cDefault_phone"
				android:positiveButtonText="@string/alert_dialog_ok"
				android:negativeButtonText="@string/alert_dialog_cancel"
				/>
				
			<ListPreference 
				android:key="@string/cLocaleKey"
				android:title="@string/cLocale" 
				android:persistent="true"
				android:defaultValue="en" 
				android:summary="@string/cLocale"
				android:entries="@array/locales" 
				android:entryValues="@array/locale_values"
				android:negativeButtonText="@string/cCancelLabel" />

				
			<ListPreference 
				android:key="@string/cCommune_section_key" 
                android:title="@string/cCommune_section"
                android:entries="@array/commune_section_names"
                android:entryValues="@array/commune_section_names"
                android:defaultValue = "@string/cDefault_preference_string"
                android:shouldDisableView="true"
                android:summary="@string/cCommune_section" 
                android:negativeButtonText="@string/cCancelLabel" />    
                
                
             <Preference android:key="aboutKey" 
				android:title="@string/cAboutItem"
				activity_class="org.hfoss.posit.android.experimental.plugin.commodity.CommodityAboutActivity"
				android:summary="" />
	
		</PreferenceScreen>
	</PreferenceCategory>

</PreferenceScreen>